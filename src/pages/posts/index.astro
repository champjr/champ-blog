---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');
const posts = allPosts
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Posts" description="Writing by Champ">
  <h1>Posts</h1>
  <p class="muted">Markdown posts with a simple index + post pages.</p>

  {posts.length === 0 ? (
    <p>No posts yet.</p>
  ) : (
    <div style="display:flex; flex-direction: column; gap: 14px; margin-top: 14px;">
      {posts.map((post) => (
        <article class="card">
          <a href={`/posts/${post.slug}/`} style="text-decoration:none; color: inherit;">
            <h2 style="margin: 0; font-size: 1.35rem;">{post.data.title}</h2>
          </a>

          <div class="muted" style="font-size: 0.95rem; margin-top: 6px;">
            {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
            {post.data.description ? ` â€” ${post.data.description}` : ''}
          </div>

          {post.data.tags?.length ? (
            <ul class="taglist" style="margin-top: 10px;">
              {post.data.tags.map((t) => (
                <li>
                  <a href={`/tags/${encodeURIComponent(t)}/`}>#{t}</a>
                </li>
              ))}
            </ul>
          ) : null}
        </article>
      ))}
    </div>
  )}
</BaseLayout>
